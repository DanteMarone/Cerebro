/* General styles for light mode */
QWidget {
    background-color: #ffffff;
    color: #000000;
    font-family: "Segoe UI", sans-serif;
    font-size: 14px;
}

/* Main window and central layout */
QMainWindow {
    background-color: #f5f5f5;
}

/* Sidebar styling */
#sidebar {
    background-color: #f8f8f8;
    border-right: 1px solid #e0e0e0;
}

#logoContainer {
    background-color: #803391; /* Purple accent color */
    border-bottom: 1px solid #e0e0e0;
}

#appLogo {
    font-size: 24px;
    font-weight: bold;
    color: #ffffff;
}

#appTagline {
    font-size: 13px;
    color: #ffffff; /* Brighter white for better contrast */
    font-weight: 500;
}

#navButton {
    background-color: transparent;
    border: none;
    text-align: left;
    padding: 12px 15px;
    border-radius: 0;
    font-size: 16px;
    color: #505050;
}

#navButton:hover {
    background-color: #f0f0f0;
}

#navButton[selected="true"] {
    background-color: #f0f0f0;
    border-left: 4px solid #803391; /* Purple accent color */
    font-weight: bold;
    color: #803391;
}

/* Content area styling */
#contentStack {
    background-color: #fafafa;
}

/* Chat tab styling */
#chatContainer {
    background-color: #ffffff;
    border-radius: 8px;
    border: 1px solid #e0e0e0;
}

#chatHeader {
    background-color: #f8f8f8;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    border-bottom: 1px solid #e0e0e0;
}

#chatTitle {
    font-size: 18px;
    font-weight: bold;
}

#chatToolButton {
    background-color: transparent;
    border: none;
    color: #666666;
    font-size: 16px;
    padding: 4px;
    border-radius: 4px;
}

#chatToolButton:hover {
    background-color: #e8e8e8;
}

#chatSeparator {
    background-color: #e0e0e0;
}

#chatScrollArea {
    background-color: #ffffff;
}

#chatDisplay {
    background-color: #ffffff;
    border: none;
    color: #333333;
    padding: 10px;
}

#typingIndicator {
    color: #888888;
    font-style: italic;
    padding: 5px 10px;
}

#inputContainer {
    background-color: #f8f8f8;
    border-radius: 8px;
    border: 1px solid #e0e0e0;
}

#userInput {
    background-color: #ffffff;
    border: 1px solid #dddddd;
    border-radius: 5px;
    padding: 8px;
    color: #333333;
    min-height: 50px; /* Ensuring enough space for placeholder text */
}

#shortcutLabel {
    color: #999999;
    font-size: 11px;
    font-style: italic;
}

#sendButton, #clearButton {
    background-color: #803391; /* Purple accent color */
    color: white;
    border: none;
    padding: 8px 15px;
    border-radius: 5px;
    font-weight: bold;
}

#sendButton:hover, #clearButton:hover {
    background-color: #964aab;
}

#clearButton {
    background-color: #aaaaaa;
}

#clearButton:hover {
    background-color: #888888;
}

/* Notification styling */
#notificationArea {
    background-color: transparent;
}

#toast {
    background-color: #ffffff;
    border-radius: 8px;
    border: 1px solid #e0e0e0;
    border-left: 4px solid #cccccc;
}

#toast[type="info"] {
    border-left-color: #26a69a;
}

#toast[type="error"] {
    border-left-color: #f44336;
}

#toastIcon {
    color: #666666;
    font-weight: bold;
    background-color: #f0f0f0;
    border-radius: 12px;
    text-align: center;
}

#toastCloseButton {
    background-color: transparent;
    color: #999999;
    border: none;
    font-size: 16px;
    font-weight: bold;
}

#toastCloseButton:hover {
    color: #555555;
}

/* Basic widget styling */
QTabWidget::pane {
    border: 1px solid #d0d0d0;
    border-radius: 5px;
    background-color: #ffffff;
}

QTabBar::tab {
    background-color: #f0f0f0;
    color: #666666;
    padding: 8px 15px;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    margin-right: 2px;
}

QTabBar::tab:selected {
    background-color: #ffffff;
    border-top: 2px solid #803391;
    color: #333333;
}

QPushButton {
    background-color: #f0f0f0;
    border: 1px solid #dcdcdc;
    padding: 5px 10px;
    border-radius: 5px;
}

QPushButton:hover {
    background-color: #e0e0e0;
}

QPushButton:disabled {
    background-color: #f8f8f8;
    color: #cccccc;
}

QLineEdit, QTextEdit, QPlainTextEdit {
    background-color: #ffffff;
    border: 1px solid #dddddd;
    padding: 5px;
    border-radius: 5px;
    color: #333333;
}

/* Make system prompt larger */
#systemPromptInput {
    min-height: 150px;
}

QComboBox {
    background-color: #ffffff;
    border: 1px solid #dddddd;
    padding: 5px;
    border-radius: 5px;
    color: #333333;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: right center;
    width: 20px;
    border-left: 1px solid #dddddd;
}

QScrollBar:vertical {
    background-color: #f0f0f0;
    width: 12px;
    margin: 0px;
}

QScrollBar::handle:vertical {
    background-color: #c0c0c0;
    min-height: 20px;
    border-radius: 6px;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background-color: #f0f0f0;
    height: 12px;
    margin: 0px;
}

QScrollBar::handle:horizontal {
    background-color: #c0c0c0;
    min-width: 20px;
    border-radius: 6px;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
}

QMenu {
    background-color: #ffffff;
    border: 1px solid #e0e0e0;
    padding: 5px;
}

QMenu::item {
    padding: 5px 25px 5px 20px;
    border-radius: 3px;
}

QMenu::item:selected {
    background-color: #f0f0f0;
}

QMenuBar {
    background-color: #f5f5f5;
}

QMenuBar::item {
    padding: 5px 10px;
    background-color: transparent;
    border-radius: 3px;
}

QMenuBar::item:selected {
    background-color: #e0e0e0;
}
/* Make system prompt larger */
#systemPromptInput {
    min-height: 150px;
}
